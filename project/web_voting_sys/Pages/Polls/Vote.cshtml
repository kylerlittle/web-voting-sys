@page
@model web_voting_sys.Pages.Polls.VoteModel

@{
    ViewData["Title"] = "Vote";
}

<h2>Vote</h2>

<h4>Poll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @foreach (var question in Model.PollQuestions)
    {
        <!--Display the question-->
        <h2>@Html.DisplayFor(model => question.Question)</h2>
        <p>&nbsp; </p>
        @for (int i = 0; i < Model.Poll.AnswersPerQuestion; ++i)
{
            <!--Display each choice for that question and give it a radio button.-->
        <label>
            @Html.RadioButtonFor(m => m.SelectedAnswers[@Model.PollQuestions.IndexOf(question)], Model.PollChoices[@Model.PollQuestions.IndexOf(question)][i].ID)
            @Html.DisplayTextFor(m => m.PollChoices[Model.PollQuestions.IndexOf(question)][i].Choice)
        </label>
        <p>&nbsp; </p>
}
        <p>&nbsp; </p>
}
            <div class="form-group">
                <input type="submit" value="Submit Responses" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Pollindex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
