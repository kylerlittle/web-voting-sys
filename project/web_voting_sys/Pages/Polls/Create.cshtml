@page
@model web_voting_sys.Pages.Polls.CreateModel

@{
    ViewData["Title"] = "Create a poll.";
}

<h2>Create</h2>

<h4>Poll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Poll.StartTime" class="control-label"></label>
                <input asp-for="Poll.StartTime" class="form-control" />
                <span asp-validation-for="Poll.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poll.EndTime" class="control-label"></label>
                <input asp-for="Poll.EndTime" class="form-control" />
                <span asp-validation-for="Poll.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poll.Name" class="control-label"></label>
                <input asp-for="Poll.Name" class="form-control" />
                <span asp-validation-for="Poll.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poll.PollCreator" class="control-label"></label>
                <input asp-for="Poll.PollCreator" class="form-control" />
                <span asp-validation-for="Poll.PollCreator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poll.Type" class="control-label"></label>
                <select asp-for="Poll.Type" class="form-control" asp-items="Html.GetEnumSelectList<Model.PollType>()"></select>
                <span asp-validation-for="Poll.Type" class="text-danger"></span>
            </div>
            <!--Note that max number of questions was set in Poll class itself.-->
            <div class="form-group">
                <label asp-for="Poll.NumberOfQuestions" class="control-label"></label>
                <select asp-for="Poll.NumberOfQuestions" class="form-control">
                    @for (int i = 1; i <= Model.Poll.MaximimumQuestions; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Poll.NumberOfQuestions" class="text-danger"></span>
            </div>
            <!--Note that max answers per question was set in Poll class itself.-->
            <div class="form-group">
                <label asp-for="Poll.AnswersPerQuestion" class="control-label"></label>
                <select asp-for="Poll.AnswersPerQuestion" class="form-control">
                    @for (int i = 1; i <= Model.Poll.MaximumAnswersPerQuestion; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Poll.AnswersPerQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Poll Questions" asp-route="Model.Poll.ID" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
